<div class="container">
  <%= form_tag url_for(action: 'create'), method: "post" do %>

  <%= label_tag 'Nom' %>
  <%= text_field_tag 'last_name', @user.last_name %>
  <br /> <br />

  <%= label_tag 'Prenom' %>
  <%= text_field_tag 'first_name', @user.first_name %>
  <br /> <br />

  <%= label_tag 'Age' %>
  <%= text_field_tag 'age', @user.age %>
  <br /> <br />

  <%= label_tag 'Email' %>
  <%= text_field_tag 'email', @user.email %>
  <br /> <br />

  <%= label_tag 'Mot de passe' %>
  <%= password_field_tag 'password', @user.password %>
  <br /> <br />

  <%= label_tag 'Confirmer votre mot de passe' %>
  <%= password_field_tag 'password_confirmation', @user.password_confirmation %>
  <br /> <br />
  
  <%= submit_tag "Sign up" %>

<% end %>
</div>