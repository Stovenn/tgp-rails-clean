<!DOCTYPE html>
<html>
<head>
	<title>Gossip <%= @gossip.id%></title>
</head>
<body>
  <div class="container">
    <div class="card ">
	  <div class="card-header bg-primary text-white">
	      <h3><%= @gossip.title %></h3>
	    </div>
	    <div class="card-body">
	      <blockquote class="blockquote mb-0">
	      <p><%= @gossip.content %></p>
	      <footer class="blockquote-footer"><cite title="Source Title"><%= @gossip.user.first_name%> <%= @gossip.user.last_name%> from <a href="<%= city_path(@c_id) %>"><%= @gossip.user.city.name%></a></cite> <a href="<%= user_path(@u_id)%>">(Afficher le profil de l'auteur)</a></footer>
	      </blockquote>
	    </div>
	    <div class="card-footer small">Post√© le <%= @gossip.created_at.strftime('%d-%m-%Y') %></div>
		</div>
		<div class="d-flex mt-3 mb-4">
			<% if current_user.id == @gossip.user.id%>
			<p>
		 		<button class="btn btn-secondary"><a href="<%= edit_gossip_path %>" class="text-white">Editer le gossip</a></button>
			</p>
			<p>
				<button class="btn btn-danger ml-2"><a href="<%= gossip_path %>" class="text-white" data-confirm="Etes-vous sur ?" data-method="DELETE">Supprimer le gossip</a></button>
			</p>
			<% else %>
			<% end %>
		</div>

<!-- comment block -->
			<h3 class="mt-3 mb-3">Commentaires</h3>
			<% @comments.each do |c| %>
				<div class="col-md-8">
  				<div class="card mb-3" style="width: 48rem;">
	  				<div class="card-body">
        			<h5 class="card-title"><%= c.content %></a></h5>
  					</div>
  	  			<div class="card-footer"><%= c.user.first_name %></div>
  				</div>
				</div>
  		<%end%>
  </div>
</body>
</html>